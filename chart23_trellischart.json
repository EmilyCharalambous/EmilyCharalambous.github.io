{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/EmilyCharalambous/EmilyCharalambous.github.io/main/Renters%20vs%20owner%20occupiers(2).csv",
    "format": {
      "type": "csv"
    }
  },
  "title": {
    "text": "Household Costs Indices, Average Expenditure Share by Tenure Type, UK",
    "subtitle": [
      "From 2005 to 2021",
      ""
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "middle",
    "color": "black"
  },
  "transform": [
    {
      "filter": {
        "field": "Type_of_buyers",
        "oneOf": [
          "Owner Occupier",
          "Private Renter",
          "Subsidised Renter"
        ]
      }
    }
  ],
  "mark": {
    "type": "bar",
    "color": "#1da1f8",
    "size": {
      "expr": "10"
    },
    "opacity": 1
  },
  "background": "antiquewhite",
  "height": 200,
  "width": 200,
  "encoding": {
    "xOffset": {
      "field": "Type_of_buyers"
    },
    "x": {
      "field": "Expenditure_Share",
      "type": "quantitative",
      "axis": {
        "title": "Expenditure Share (Parts per 1,000)",
        "grid": false,
        "labelAngle": 0
      }
    },
    "facet": {
      "field": "Type_of_buyers",
      "columns": 3,
      "title": null,
      "spacing": 40,
      "header": {
        "labelColor": "black",
        "labelFontSize": 10,
        "labelFontWeight": "bold"
      }
    },
    "color": {
      "field": "Type_of_buyers",
      "scale": {
        "range": [
          "darkred",
          "#929394",
          "#82cafa",
          "darkred",
          "#013794"
        ]
      },
      "title": "Type of buyers"
    },
    "y": {
      "field": "Category",
      "type": "nominal",
      "axis": {
        "tickCount": 3,
        "grid": true,
        "title": null
      },
      "tooltip": [
        {
          "field": "Expenditure_Share",
          "title": "Expenditure Share",
          "type": "quantitative"
        },
        {
          "field": "Category",
          "title": "Category",
          "type": "nominal"
        }
      ]
    }
  },
  "config": {}
}