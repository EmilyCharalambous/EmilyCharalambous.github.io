{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "title": {
    "text": "Life Satisfaction Index in the UK",
    "subtitle": "2021-2022 Data, Source: ONS",
    "fontSize": 15,
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "anchor": "middle"
  },
  "params": [
    {
      "name": "Year",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2021,
        "max": 2022,
        "step": 1,
        "name": "Year Selector:"
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/EmilyCharalambous/EmilyCharalambous.github.io/main/Life_Satisfaction_NEW(1).csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Year==Year"},
    {
      "lookup": "Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/EmilyCharalambous/EmilyCharalambous.github.io/main/Latest_UK_Map.geojson",
          "format": {"property": "features"}
        },
        "key": "properties.Name",
        "fields": ["properties", "type", "geometry"]
      }
    }
  ],
  "projection": {"type": "identity", "reflectY": true},
  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.7},
  "encoding": {
    "color": {
      "field": "Life_Satisfaction",
      "legend": {
        "title": "Life Satisfaction Index",
        "orient": "top-right",
        "direction": "horizontal",
        "labelAlign": "left"
      },
      "type": "quantitative",
      "scale": {"scheme": "purpleblue"}
    },
    "tooltip": [
      {"field": "properties.Name", "title": "Country"},
      {"field": "Life_Satisfaction", "title": "Life Satisfaction Index"}
    ]
  },
  "config": {}
}