{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
         
    "title": {
        "text": "UK - household interest rates",
        "subtitle":["Source: Bank of England. Series: IUMCCTL, IUMTLMV",""],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "#000000",
        "subtitleColor":"#000000"},
    
    "config": {
    "background":"#ffffff",
    "view": {"stroke": "transparent"}},
        
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/data/interestRatesUK_household.csv"
        },
    
    "transform": [
        {"fold":["creditCard", "mortgage_revertTo"], "as": ["variable", "value"]}],
          
    "height": 300,
    "width": 300,   
    
    "mark": {   
      "type":"line",
      "strokeWidth":2},    
    
    "encoding": {
      "x":{
        "field":"date2",
        "type":"temporal",
        "title":null,
        "axis": {
            "grid": false,
            "labelColor":"#000000"}},
    
      "y":{
        "field":"value",
        "title":null,
        "type":"quantitative",
        "axis":{
          "grid":false,
          "gridColor":"aliceblue",
          "gridWidth":0.5,
          "gridDash":1,
          "labelColor":"#000000"}
          },
    
      "color": {
          "field": "variable",
          "title":null,
          "scale": {"range": ["orange", "red"]},
          "legend":{
            "orient": "bottom-left",
            "labelColor":"#000000",
            "labelExpr": "{'creditCard': 'Credit cards', 'mortgage_revertTo': 'Mortgages'}[datum.label]"}
            }
    }
}
